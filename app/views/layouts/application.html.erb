<!DOCTYPE html>
<html>
<head>
  <title>Lair of Lith <%=h @title ? "| #{@title}" : '' %></title>
  <link rel="stylesheet" href="/stylesheets/fonts.css" />
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1 id="site-title"><%= link_to 'Lair of Lith', root_path %></h1>
  <h2 id="site-description">Character Card Generator</h2>

  <%= render 'layouts/sign_in' %>

  <div id="site-wrapper">
    <%= render 'layouts/topnav' %>

    <div id="site-content">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <%= content_tag :div, msg, :class => "flash flash_#{name}" %>
        <% end %>
      <% end %>

      <%= yield %>

      <div id="font-loader">
        <span class="bold">_</span>
        <span class="demi">_</span>
        <span class="light">_</span>
        <span class="medium">_</span>
      </div>

    </div> <!-- #site-content -->

    <%= render 'layouts/sidebar' %>

  </div> <!-- #site-wrapper -->

</body>
</html>
