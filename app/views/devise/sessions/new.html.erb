<% @title = 'Sign in' %>
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <table class="form">

    <tr><th><%= f.label :email %></th><td>  <%= f.email_field :email, :autofocus => true, :class => 'text' %></td></tr>

    <tr><th><%= f.label :password %></th><td>  <%= f.password_field :password, :class => 'text' %></td></tr>

  <% if devise_mapping.rememberable? -%>
    <tr><th></th><td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td></tr>
  <% end %>

  <tr><th></th><td><%= f.submit "Sign in" %></td></tr>
</table>
<% end %>

<%= render "devise/shared/links" %>
