<% @title = "All Characters: Page #{@page}" %>
<h1>All Characters</h1>

<%= paginate @characters %>
<ul>
  <% @characters.each do |character| %>
    <li><p>
    <%= link_to character.name, character_path(character.user, character), class: "character-#{character.status}" %> 
    by <%= link_to character.user.name, user_path(character.user) %>
    </p></li>
  <% end %>
</ul>
<%= paginate @characters %>
